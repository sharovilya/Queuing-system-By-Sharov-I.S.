									<Storyboard>
										<DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="Arrow" d:IsOptimized="True"/>
									</Storyboard>
								</VisualState>
